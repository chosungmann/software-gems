				SEG 	'ATIFFormat'

ExtractTIFF 	PROC	EXPORT

;			Calling sequence (Pascal conventions):
;
;			FUNCTION ExtractTIFF (buffer: Ptr;
;								  offset: LONGINT;
;								  count: INTEGER): INTEGER;
;
;			Parameter Offsets

@result 	EQU 	18
@buffer 	EQU 	14
@offset 	EQU 	10
@count		EQU 	8

;			Size of parameters

@params 	EQU 	10

;			Save registers

			LINK		A6,#0

;			Extract the bits

			MOVE.L		@buffer(A6),A0
			MOVE.L		@offset(A6),D0
			LSR.L		#3,D0
			MOVE.B		(A0,D0.L),D1
			SWAP		D1
			MOVE.B		1(A0,D0.L),D1
			LSL.W		#8,D1
			MOVE.B		2(A0,D0.L),D1
			MOVE.W		@offset+2(A6),D0
			AND.W		#$7,D0
			MOVE.W		#24,D2
			SUB.W		@count(A6),D2
			SUB.W		D0,D2
			LSR.L		D2,D1

;			Mask the bits

			MOVE.W		@count(A6),D0
			MOVE.L		#-1,D2
			LSL.W		D0,D2
			NOT.W		D2
			AND.W		D2,D1

;			Return the extracted bits

			MOVE.W		D1,@result(A6)

;			Clean up and exit

			UNLK		A6
			MOVE.L		(SP)+,A0
			ADD.W		#@params,SP
			JMP 		(A0)

; **********************************************************************

			SEG 		'ATIFFormat'

StuffTIFF	PROC		EXPORT

;			Calling sequence (Pascal conventions):
;
;			PROCEDURE StuffTIFF (buffer: Ptr;
;								 offset: LONGINT;
;								 code: INTEGER);
;
;			Parameter Offsets

@buffer 	EQU 	14
@offset 	EQU 	10
@code		EQU 	8

;			Size of parameters

@params 	EQU 	10

;			Save registers

			LINK		A6,#0

;			Stuff the bits

			MOVE.L		@buffer(A6),A0
			CLR.L		D0
			MOVE.W		@code(A6),D0
			MOVE.W		@offset+2(A6),D1
			AND.W		#7,D1
			SWAP		D0
			LSR.L		D1,D0
			MOVE.L		@offset(A6),D1
			LSR.L		#3,D1
			LSR.W		#8,D0
			OR.B		D0,(A0,D1.L)
			SWAP		D0
			OR.B		D0,-1(A0,D1.L)
			LSR.W		#8,D0
			OR.B		D0,-2(A0,D1.L)

;			Clean up and exit

			UNLK		A6
			MOVE.L		(SP)+,A0
			ADD.W		#@params,SP
			JMP 		(A0)

; **********************************************************************

				SEG 	'ATIFFormat'

AddTIFFPlane	PROC	EXPORT

;			Calling sequence (Pascal conventions):
;
;			PROCEDURE AddTIFFPlane (srcPtr: Ptr;
;									dstPtr: Ptr;
;									count: INTEGER);
;
;			Parameter Offsets

@srcPtr 	EQU 	14
@dstPtr 	EQU 	10
@count		EQU 	8

;			Size of parameters

@params 	EQU 	10

;			Save registers

			LINK		A6,#0

;			Unload addresses

			MOVE.L		@srcPtr(A6),A0
			MOVE.L		@dstPtr(A6),A1

;			Loop through bytes

			MOVE.W		@count(A6),D0
			SUB.W		#1,D0

@1			MOVE.B		(A1),D1
			ADD.B		(A0)+,D1
			ADD.B		D1,(A1)+
			DBF 		D0,@1

;			Clean up and exit

			UNLK		A6
			MOVE.L		(SP)+,A0
			ADD.W		#@params,SP
			JMP 		(A0)

; **********************************************************************

			END
